{% extends 'base/base_add.html.twig' %}
{% block content %}

	<div class="section-title">
		<h2>{{ page_title }}</h2>
	</div>
	<!-- Register Form -->
	<div class="row">
		<div class="col-lg-12 mt-5 mt-lg-0 d-flex align-items-stretch">
			{{ form_start(registrationForm, {
    attr: {
        class: 'php-email-form'
    }
}) }}
			<div class="row">
				<div class="form-group col-md-6">
					{{ form_row(registrationForm.email,   {  
					label: 'Adresse Email*',
    row_attr: {
        class: 'input-group'
    } }) }}

				</div>

				<div class="form-group col-md-6">
					{{ form_row(registrationForm.plainPassword, {
            label: 'Code confidentiel*',
			    row_attr: {
        class: 'input-group'
    }
        }) }}
				</div>
			</div>

			<div class="text-right"><input class="btn btn-primary w-50 mt-3" type="submit" name="submit" value="Enregistrer"></div>

			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
