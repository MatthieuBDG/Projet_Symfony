{% extends 'base/base.html.twig' %}

{% block content %}
	<div class="col-xxl-4 col-xl-5 col-lg-6 col-md-7 col-sm-9">
		<div class="card shadow-lg">
			<div class="card-body p-4">
				<h3 class="fs-4 card-title fw-bold mb-4">Réinitialiser votre mot de passe</h3>

				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}
				<div></div>

				<button class="btn btn-primary">Envoyer un courriel de réinitialisation du mot de passe</button>

				{{ form_end(requestForm) }}
				<div class="mt-3">
					{% for flash_error in app.flashes('reset_password_error') %}
						<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
					{% endfor %}
					{% for flash_error in app.flashes('reset_password_success') %}
						<div class="alert alert-success" role="success">{{ flash_error }}</div>
					{% endfor %}
				</div>
			</div>

		</div>
	{% endblock %}
